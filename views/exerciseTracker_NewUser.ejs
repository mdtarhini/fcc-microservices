<html lang="en">
<%- include('./partials/head.ejs')   %>


    <body>
        <%- include('./partials/navbar.ejs')   %>

            <div class="container-fluid  align-items-center text-center mt-5 px-0" id="mainContainer">
                <div class="container mt-5 text-left">


                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Exercise Tracker</h5>
                            <p>Please fill the information below to obtain a user-id. This id will be used for logging new activities.</p>

                            <br>
                            <form class="form" action="/api/exercise/new-user" method="post">
                                <h6>Add a new user:</h6>

                                <div class="form-group row">
                                    <label for="username" class="col-12 col-lg-2 col-form-label">username*</label>
                                    <div class="col-12 col-lg-10">
                                        <input type="text" class="form-control" id="username" name="username">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="name" class="col-12 col-lg-2 col-form-label">Name</label>
                                    <div class="col-12 col-lg-10">
                                        <input type="text" class="form-control" id="name" name="name">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="age" class="col-12 col-lg-2 col-form-label">Age</label>
                                    <div class="col-12 col-lg-10">
                                        <input type="number" class="form-control" id="age" name="age">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-dark mb-2 btn-block">Add user</button>


                            </form>

                        </div>
                    </div>

                    <%- include('./partials/exerciseTracker_api.ejs')   %>

                </div>

    </body>

</html>